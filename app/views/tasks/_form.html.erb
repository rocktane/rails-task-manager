<%= form_with model: task do |f| %>
  <div class="">
    <%= f.label :title, { class: "form-label"} %>
  </div>
  <div class="mb-3">
    <%= f.text_field :title, { class: "form-input"} %>
  </div>
  <div class="">
    <%= f.label :details, { class: "form-label"}  %>
  </div>
  <div class="mb-3">
    <%= f.text_field :details, { class: "form-input"} %>
  </div>
    <% if task.new_record?() == false %>
      <div class="mb-3">
        <%= f.label :completed, { class: "form-check-label"} %>
        <%= f.check_box :completed, { class: "form-check-input"} %>
      </div>
    <% end %>
  <div class="mb-3">
    <%= f.submit %>
  </div>
<% end %>
