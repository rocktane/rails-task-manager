<div class="container w-25">
<h1 class="mb-0 mt-5">Tasks</h1>
  <ul class="list-group list-group-flush">
    <% @tasks.each do |task| %>
    <li class="list-group-item d-flex justify-content-between">
      <%= link_to task.title, task_path(task) %><%= link_to ('<i class="fa-solid fa-trash"></i>').html_safe, task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </li>
    <% end %>
  </ul>

  <p class="d-inline-block p-3 mb-2 mt-3 bg-primary-subtle text-emphasis-primary rounded-pill py-2"><i class="fa-solid fa-plus"></i> <%= link_to 'New task', new_task_path %></p>
</div>
